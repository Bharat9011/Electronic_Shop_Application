    <LinearLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linkcompanies"
        app:layout_constraintRight_toRightOf="@id/linkcompanies"
        app:layout_constraintLeft_toLeftOf="@id/linkcompanies">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/_39"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="\u20B9"
            android:textSize="20sp"
            android:gravity="bottom"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:id="@+id/orignalVal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9,199"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="bottom"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="14,999"
            android:textSize="30sp"
            android:layout_marginStart="20sp"
            />

    </LinearLayout>

